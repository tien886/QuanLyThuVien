<Window x:Class="QuanLyThuVien.Views.MainView"
        xmlns:viewModel="clr-namespace:QuanLyThuVien.ViewModels"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyThuVien.Views"
        Height="1080" Width="1920"
        >
    <Window.DataContext>
        <viewModel:MainViewModel />
    </Window.DataContext>
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <DataTemplate DataType="{x:Type viewModel:DashBoardViewModel}">
            <local:DashBoardView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:QuanLySinhVienViewModel}">
            <local:QuanLySinhVien/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:QuanLySachViewModel}">
            <local:QuanLySachView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:MuonTraSachViewModel}">
            <local:MuonTraSachView/>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="1"/>
            <ColumnDefinition Width="*"/>

        </Grid.ColumnDefinitions>
        <Border Grid.Column="1" Background="{StaticResource Stroke}" />
        <Border
            CornerRadius="10,0,0,10"
            Grid.Column="2"
            
            >
            <Border.Background>
                <LinearGradientBrush>
                    <GradientStop Color="{StaticResource DeepBackground}" ></GradientStop>
                </LinearGradientBrush>
            </Border.Background>
        </Border>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="109"/>
                <RowDefinition Height="1"/>
                <RowDefinition Height="109"/>
                <RowDefinition Height="1"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="1" Background="{StaticResource Stroke}" />
            <Border Grid.Row="3" Background="{StaticResource Stroke}" />
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="70"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <fa:IconImage Icon="BookOpen" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{StaticResource ChanelBackground}" Width="40" />
                <TextBlock FontFamily="Arial" Grid.Column="1" Text="Quản lý thư viện" FontSize="30" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            </Grid>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="70"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Image Grid.Column="0" Source="/Resources/Images/A.png" Height="40" Width="40" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <StackPanel Orientation="Vertical" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" >
                    <TextBlock Text="Admin" FontSize="22" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" FontFamily="Arial"/>
                    <TextBlock  Text="Quản trị viên" FontSize="22" FontFamily="Arial" Foreground="{StaticResource titleOfWindow}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="256"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Margin="15">
                    <StackPanel Orientation="Vertical">
                        <RadioButton
                            Style="{StaticResource menuButton}"
                            Tag ="{StaticResource Black}"
                            Command="{Binding ShowDashBoardView}"
                            VerticalAlignment="Top"
                            IsChecked="True"
                            >
                            <StackPanel Orientation="Horizontal" >
                                <fa:IconImage Style="{StaticResource menuButtonIcon}" Icon="GripVertical"/>
                                <TextBlock Style="{StaticResource menuButtonText}" Text="DashBoard"/>

                            </StackPanel>
                        </RadioButton>
                        <RadioButton
                            Style="{StaticResource menuButton}"
                            Tag ="{StaticResource Black}"
                            Command="{Binding ShowQuanLySinhVienView}"
                            VerticalAlignment="Top"
                            >
                            <StackPanel Orientation="Horizontal" >
                                <fa:IconImage Style="{StaticResource menuButtonIcon}" Icon="PeopleGroup"/>
                                <TextBlock Style="{StaticResource menuButtonText}" Text="Quản lý sinh viên"/>

                            </StackPanel>
                        </RadioButton>
                        <RadioButton
                            Style="{StaticResource menuButton}"
                            Tag ="{StaticResource Black}"
                            Command="{Binding ShowQuanLySachView}"
                            VerticalAlignment="Top"
                            >
                            <StackPanel Orientation="Horizontal" >
                                <fa:IconImage Style="{StaticResource menuButtonIcon}" Icon="Book"/>
                                <TextBlock Style="{StaticResource menuButtonText}" Text="Quản lý sách"/>

                            </StackPanel>
                        </RadioButton>
                        <RadioButton
                            Style="{StaticResource menuButton}"
                            Tag ="{StaticResource Black}"
                            Command="{Binding ShowMuonTraSachView}"
                            VerticalAlignment="Top"
                            >
                            <StackPanel Orientation="Horizontal" >
                                <fa:IconImage Style="{StaticResource menuButtonIcon}" Icon="ArrowRightToFile"/>
                                <TextBlock Style="{StaticResource menuButtonText}" Text="Mượn/Trả sách"/>

                            </StackPanel>
                        </RadioButton>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Column ="2" Margin="50,10">
            <StackPanel Orientation="Vertical" >
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Vertical" Grid.Column="0">
                        <TextBlock Text="{Binding Title}" FontSize="35" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding Caption}" FontSize="25" FontWeight="Normal"
                   Foreground="{StaticResource titleOfWindow}"/>
                    </StackPanel>

                    <Button 
                        Style="{StaticResource RoundedButton}"
                        Width="200"
                        Height="40"
                        HorizontalAlignment="Right"
                        Visibility="{Binding IsAddButtonVisible, Converter={StaticResource BoolToVis}}"
                        BorderBrush="{StaticResource ChanelBackground}" 
                        BorderThickness="2">

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <fa:IconImage Style="{StaticResource RoundedButtonIcon}" Icon="Plus"/>
                            <TextBlock Style="{StaticResource RoundedButtonText}" Text="{Binding ButtonName}"/>
                        </StackPanel>
                    </Button>
                </Grid>

                <ContentControl Content="{Binding CurrentChildView}"
                        Grid.Column="2"
                        />
            </StackPanel>
            
        </Grid>
    </Grid>
</Window>
