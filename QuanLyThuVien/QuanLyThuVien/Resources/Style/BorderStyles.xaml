<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="PaginationBorder" TargetType="{x:Type Border}">
        <Setter Property="Margin" Value="0,0,10,10" />
        <Setter Property="HorizontalAlignment" Value="Right" />
        <Setter Property="Background" Value="White" />
        <Setter Property="BorderBrush" Value="#E0E0E0" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="5" />
    </Style>
    <Style x:Key="BaseCardStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource White}"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Padding" Value="25"/>
        <Setter Property="Margin" Value="0,0,0,20"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="Gray" BlurRadius="10" ShadowDepth="2" Opacity="0.15"/>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="StatCardStyle" TargetType="Border" BasedOn="{StaticResource BaseCardStyle}">
        <Setter Property="Padding" Value="20"/>
        <Setter Property="Margin" Value="0,0,20,20"/>
        <Setter Property="Height" Value="120"/>
    </Style>
</ResourceDictionary>