<UserControl x:Class="QuanLyThuVien.Views.QuanLyDanhMucPopup.CategoryPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             Width="400" Height="Auto">

    <Border Background="{StaticResource White}" CornerRadius="12" Padding="25">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.2" Color="Gray"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="{Binding Title}" FontSize="20" FontWeight="Bold"/>
                    <TextBlock Text="Thông tin thể loại sách" FontSize="13" Foreground="{StaticResource TitleOfWindow}" Margin="0,4,0,0"/>
                </StackPanel>
                <Button Style="{StaticResource CircularIconButton}" HorizontalAlignment="Right" VerticalAlignment="Top"
                        Command="{Binding ClosePopupCommand}">
                    <fa:IconImage Icon="Xmark" Width="14" Height="14" Foreground="{StaticResource TitleOfWindow}"/>
                </Button>
            </Grid>

            <StackPanel Grid.Row="1" Margin="0,0,0,25">
                <TextBlock Style="{StaticResource InputLabel}">
                    <Run Text="Tên thể loại"/> <Run Text="*" Foreground="Red"/>
                </TextBlock>
                <TextBox Text="{Binding CategoryName, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource StandardTextBox}"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Hủy" Command="{Binding ClosePopupCommand}"
                        Style="{StaticResource RoundedButton}"
                        Background="White" Foreground="{StaticResource Black}" BorderBrush="{StaticResource Stroke}"
                        Width="80" Height="36" Margin="0,0,10,0"/>
                <Button Content="{Binding ButtonLabel}" Command="{Binding SaveCommand}"
                        Style="{StaticResource RoundedButton}" Width="120" Height="36"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>