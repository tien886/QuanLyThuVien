<UserControl x:Class="QuanLyThuVien.Views.QuanLySachView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyThuVien.Views"
             mc:Ignorable="d" 
             Padding="0,32"
             d:DesignHeight="1080" d:DesignWidth="1660">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="700"/>
        </Grid.RowDefinitions>
        <TextBox 
        Grid.Row="0"
        Style="{StaticResource SearchTextBox}"
        Text="{Binding SearchBarText, UpdateSourceTrigger=PropertyChanged}"
        />
        
        <DataGrid 
          Grid.Row="1"
          ItemsSource="{Binding BookList}"
          AutoGenerateColumns="False"
          CanUserAddRows="False"
          CanUserDeleteRows="False"
          IsReadOnly="True"
          Margin="10,32,0,0"
          Style="{StaticResource RoundedDataGrid}"
          HorizontalAlignment="Left"  
            >
            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                </Style>

                <Style x:Key="CenteredTextStyle" TargetType="TextBlock">
                    <Setter Property="TextAlignment" Value="Center"/>
                    <Setter Property="HorizontalAlignment" Value="Stretch"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                </Style>

                <Style x:Key="CenteredCellStyle" TargetType="DataGridCell">
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                </Style>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã đầu sách" Binding="{Binding BookID}" Width="100"
                            ElementStyle="{StaticResource CenteredTextStyle}"
                            EditingElementStyle="{StaticResource CenteredTextStyle}"/>

                <DataGridTextColumn Header="Tên sách" Binding="{Binding Title}" Width="200"
                            ElementStyle="{StaticResource CenteredTextStyle}"
                            EditingElementStyle="{StaticResource CenteredTextStyle}"/>

                <DataGridTextColumn Header="Tác giả" Binding="{Binding Author}" Width="150"
                            ElementStyle="{StaticResource CenteredTextStyle}"
                            EditingElementStyle="{StaticResource CenteredTextStyle}"/>

                <DataGridTextColumn Header="ISBN" Binding="{Binding ISBN}" Width="130"
                            ElementStyle="{StaticResource CenteredTextStyle}"
                            EditingElementStyle="{StaticResource CenteredTextStyle}"/>

                <DataGridTextColumn Header="Thể loại" Binding="{Binding BookCategory.CategoryName}" Width="150"
                            ElementStyle="{StaticResource CenteredTextStyle}"
                            EditingElementStyle="{StaticResource CenteredTextStyle}"/>

                <DataGridTextColumn Header="Tổng bản sao" Binding="{Binding TotalCopies}" Width="100"
                            ElementStyle="{StaticResource CenteredTextStyle}"
                            EditingElementStyle="{StaticResource CenteredTextStyle}"/>
                <DataGridTemplateColumn Header="Có sẵn" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding AvailableCount}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="{StaticResource Black}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding AvailableCount}" Value="0">
                                                <Setter Property="Foreground" Value="{StaticResource Danger/Overdue}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Thao tác" Width="180" >
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"  VerticalAlignment="Center" >
                                <Button Style="{StaticResource IconButton}" Margin="0,0,10,0"
                                    Command="{Binding DataContext.OpenBookDetailAndCopyPopupCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                    CommandParameter="{Binding}"
                                    >
                                    <fa:IconImage Icon="Eye" Width="18" Height="18" Foreground="{StaticResource Success/1}"/>
                                </Button>
                                <Button Style="{StaticResource IconButton}" Margin="0,0,10,0"
                                    >
                                    <fa:IconImage Icon="PenToSquare" Width="18" Height="18" Foreground="{StaticResource Black}"/>
                                </Button>
                                <Button Style="{StaticResource IconButton}" Margin="0,0,10,0"
                                        Command="{Binding DataContext.DeleteBookCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}"
                                    >
                                    <fa:IconImage Icon="TrashCan" Width="18" Height="18" Foreground="{StaticResource Danger/Overdue}"/>
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        
    </Grid>

</UserControl>
