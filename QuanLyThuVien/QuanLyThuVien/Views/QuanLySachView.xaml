<UserControl x:Class="QuanLyThuVien.Views.QuanLySachView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="1080"
             d:DesignWidth="1660">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="650"/>
            <RowDefinition Height="45"/>
        </Grid.RowDefinitions>

        <TextBox Style="{StaticResource SearchTextBox}"
                Tag="Tìm kiếm theo Mã sách, Tên sách, Họ và tên tác giả, Thể loại "
                Grid.Row="0">
            <TextBox.Text>
                <Binding Path="SearchBarText" UpdateSourceTrigger="PropertyChanged"/>
            </TextBox.Text>
        </TextBox>
        
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding BookList}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="True"
                  Margin="0,20,0,0" 
                  Style="{StaticResource RoundedDataGrid}">
            <DataGrid.Columns>
                <!-- Mã sách -->
                <DataGridTextColumn Header="Mã sách"
                                    Binding="{Binding BookID}"
                                    Width="70"
                                    ElementStyle="{StaticResource CellTextCenter}"/>

                <DataGridTextColumn Header="Tên sách"
                                    Binding="{Binding Title}"
                                    Width="3*"
                                    ElementStyle="{StaticResource CellTextCenter}"/>

                <DataGridTextColumn Header="Tác giả"
                                    Binding="{Binding Author}"
                                    Width="140"
                                    ElementStyle="{StaticResource CellTextCenter}"/>

                <DataGridTextColumn Header="ISBN"
                                    Binding="{Binding ISBN}"
                                    Width="110"
                                    ElementStyle="{StaticResource CellTextCenter}"/>

                <DataGridTextColumn Header="Thể loại"
                                    Binding="{Binding BookCategory.CategoryName}"
                                    Width="110"
                                    ElementStyle="{StaticResource CellTextCenter}"/>

                <DataGridTextColumn Header="Tổng bản sao"
                                    Binding="{Binding TotalCopies}"
                                    Width="110"
                                    ElementStyle="{StaticResource CellTextCenter}"/>

                <DataGridTemplateColumn Header="Có sẵn" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding AvailableCount}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="{StaticResource Black}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding AvailableCount}" Value="0">
                                                <Setter Property="Foreground"
                                                        Value="{StaticResource Danger/Overdue}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Thao tác" Width="160">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center">

                                <Button Style="{StaticResource CircularIconButton}"
                                        Command="{Binding DataContext.OpenBookDetailAndCopyPopupCommand,
                                                  RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}">
                                    <fa:IconImage Icon="Eye"
                                                  Width="18"
                                                  Height="18"
                                                  Foreground="{StaticResource Success/1}"/>
                                </Button>

                                <Button Style="{StaticResource CircularIconButton}"
                                        Margin="5,0,0,0"
                                        Command="{Binding DataContext.OpenSuaBookHeadPopupCommand,
                                                          RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}">
                                    <fa:IconImage Icon="PenToSquare"
                                                  Width="18"
                                                  Height="18"
                                                  Foreground="{StaticResource TitleOfWindow}"/>
                                </Button>

                                <Button Style="{StaticResource CircularIconButton}"
                                        Margin="5,0,0,0"
                                        Command="{Binding DataContext.DeleteBookCommand,
                                                          RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}">
                                    <fa:IconImage Icon="TrashCan"
                                                  Width="18"
                                                  Height="18"
                                                  Foreground="{StaticResource Danger/Overdue}"/>
                                </Button>

                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>
        </DataGrid>
        <Border Grid.Row="3" Style="{StaticResource PaginationBorder}">
                <StackPanel
                    HorizontalAlignment="Right"
                    VerticalAlignment="Stretch"
                    Orientation="Horizontal">
                <Button
            Command="{Binding GoToPreviousPageCommand}"
            Content="← Trang trước"
            Style="{StaticResource BackForwardButtonStyle}" />

                <Border Width="1" Margin="4,0" Background="#E0E0E0" />
                <Button
            Command="{Binding PageSelectionCommand}"
            CommandParameter="{Binding FirstPage}"
            Content="{Binding FirstPage}"
            Style="{StaticResource PageButtonUnSelectedStyle}" />

                <Button
            Command="{Binding PageSelectionCommand}"
            CommandParameter="{Binding SecondPage}"
            Content="{Binding SecondPage}"
            Style="{StaticResource PageButtonUnSelectedStyle}" />

                <Button
            Command="{Binding PageSelectionCommand}"
            CommandParameter="{Binding ThirdPage}"
            Content="{Binding ThirdPage}"
            Style="{StaticResource PageButtonUnSelectedStyle}" />

                <Button
            Command="{Binding PageSelectionCommand}"
            CommandParameter="{Binding FourthPage}"
            Content="{Binding FourthPage}"
            Style="{StaticResource PageButtonUnSelectedStyle}" />

                <Button
            Command="{Binding PageSelectionCommand}"
            CommandParameter="{Binding FifthPage}"
            Content="{Binding FifthPage}"
            Style="{StaticResource PageButtonUnSelectedStyle}" />

                <Border Width="1" Margin="4,0" Background="#E0E0E0" />

                <Button
            Command="{Binding GoToNextPageCommand}"
            Content="Trang sau →"
            Style="{StaticResource BackForwardButtonStyle}" />
            </StackPanel>
            </Border>
    </Grid>
    
</UserControl>