<UserControl x:Class="QuanLyThuVien.Views.DashBoardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyThuVien.Views"
             mc:Ignorable="d" 
             Padding="0,32"
             d:DesignHeight="1080" d:DesignWidth="1660">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel
            Orientation="Horizontal"
            Grid.Row="0"
            >
            <Border
            Background="White"
            CornerRadius="15"
            Padding="20"
            Width="250"
            Height="130"
            Margin="0,10,34,10"
            SnapsToDevicePixels="True">
                    <Border.Effect>
                        <DropShadowEffect Color="Gray" BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!-- Left: text -->
                        <StackPanel>
                            <TextBlock Text="Tổng bản sao" Foreground="{StaticResource TitleOfWindow}" FontSize="20"/>
                            <TextBlock Text="{Binding TotalCopies}" FontWeight="Bold" FontSize="18" Foreground="{StaticResource Black}"/>
                        </StackPanel>

                        <!-- Right: icon container -->
                        <Border
                    Grid.Column="1"
                    Width="40" Height="40"
                    Background="#EEF3FF"
                    CornerRadius="12"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center">
                            <fa:IconImage Icon="Book" Foreground="#2563EB" Width="20" Height="20" 
              HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>
                <Border
                    Background="White"
                    CornerRadius="15"
                    Padding="20"
                    Width="250"
                    Height="130"
                    Margin="0,10,34,10"
                    SnapsToDevicePixels="True">
                    <Border.Effect>
                        <DropShadowEffect Color="Gray" BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!-- Left: text -->
                        <StackPanel>
                            <TextBlock Text="Bạn đọc đang" Foreground="{StaticResource TitleOfWindow}" FontSize="20"/>
                            <TextBlock Text="mượn" Foreground="{StaticResource TitleOfWindow}" FontSize="20"/>
                            <TextBlock Text="6" FontWeight="Bold" FontSize="18" Foreground="{StaticResource Black}"/>
                        </StackPanel>

                        <!-- Right: icon container -->
                        <Border
                    Grid.Column="1"
                    Width="40" Height="40"
                    Background="{StaticResource Success/Available_light}"
                    CornerRadius="12"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center">
                            <fa:IconImage Icon="PeopleGroup" Foreground="{StaticResource Success/Available}" Width="20" Height="20" 
              HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>
            <Border
                    Background="White"
                    CornerRadius="15"
                    Padding="20"
                    Width="250"
                    Height="130"
                    Margin="0,10,34,10"
                    SnapsToDevicePixels="True">
                <Border.Effect>
                    <DropShadowEffect Color="Gray" BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                </Border.Effect>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- Left: text -->
                    <StackPanel>
                        <TextBlock Text="Số lượng đầu sách" Foreground="{StaticResource TitleOfWindow}" FontSize="20"/>
                        <TextBlock Text="{Binding TotalBooks}" FontWeight="Bold" FontSize="18" Foreground="{StaticResource Black}"/>
                    </StackPanel>

                    <!-- Right: icon container -->
                    <Border
                Grid.Column="1"
                Width="40" Height="40"
                Background="#EEF3FF"
                CornerRadius="12"
                HorizontalAlignment="Right"
                VerticalAlignment="Center">
                        <fa:IconImage Icon="BookBookmark" Foreground="#2563EB" Width="20" Height="20" 
          HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </Grid>
            </Border>
            <Border
            Background="White"
            CornerRadius="15"
            Padding="20"
            Width="250"
            Height="130"
            Margin="0,10,34,10"
            SnapsToDevicePixels="True">
                <Border.Effect>
                    <DropShadowEffect Color="Gray" BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                </Border.Effect>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- Left: text -->
                    <StackPanel>
                        <TextBlock Text="Đang được mượn" Foreground="{StaticResource TitleOfWindow}" FontSize="20"/>
                        <TextBlock Text="700" FontWeight="Bold" FontSize="18" Foreground="{StaticResource Black}"/>
                    </StackPanel>

                    <!-- Right: icon container -->
                    <Border
                Grid.Column="1"
                Width="40" Height="40"
                Background="{StaticResource InUse_light}"
                CornerRadius="12"
                HorizontalAlignment="Right"
                VerticalAlignment="Center">
                        <fa:IconImage Icon="BookOpen" Foreground="{StaticResource InUse}" Width="20" Height="20" 
          HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </Grid>
            </Border>
        </StackPanel>
        <Border
     Grid.Row="1"
    Background="{StaticResource White}"
    CornerRadius="15"
    Width="1100"
    Height="520"
    Margin="0,10,0,10"
    SnapsToDevicePixels="True"
    HorizontalAlignment="Left"
    >
            <Border.Effect>
                <DropShadowEffect Color="Gray" BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
            </Border.Effect>
            <StackPanel Margin="30">
                <TextBlock Text="Hoạt động gần đây" FontWeight="SemiBold" FontSize="18" Foreground="{StaticResource Black}"/>

            </StackPanel>
        </Border>
    </Grid>
</UserControl>
