<UserControl x:Class="QuanLyThuVien.Views.DashBoardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyThuVien.Views"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1660">

    <UserControl.Resources>

        <Style x:Key="DashboardCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource White}"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="25"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Gray" BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="StatCardStyle" TargetType="Border" BasedOn="{StaticResource DashboardCardStyle}">
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,20,20"/>
            <Setter Property="Height" Value="120"/>
        </Style>

        <Style x:Key="CardHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Foreground" Value="{StaticResource Black}"/>
        </Style>

        <Style x:Key="CardCaption" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Foreground" Value="{StaticResource TitleOfWindow}"/>
        </Style>

    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">

        <StackPanel Orientation="Vertical" Margin="0,0,10,0">
            <!-- Thống kê nhanh -->
            <UniformGrid Columns="4" Margin="0,0,-20,0">

                <!-- Tổng bản sao -->
                <Border Style="{StaticResource StatCardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Tổng bản sao" Foreground="{StaticResource TitleOfWindow}" FontSize="16"/>

                            <TextBlock Text="{Binding TotalCopies}" FontWeight="Bold" FontSize="24" Margin="0,5,0,0" Foreground="{StaticResource Black}"/>
                        </StackPanel>
                        <Border Grid.Column="1" Width="48" Height="48" Background="#EEF3FF" CornerRadius="12"
                                HorizontalAlignment="Right" VerticalAlignment="Center">
                            <fa:IconImage Icon="LayerGroup" Foreground="#2563EB" Width="24" Height="24" 
                                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- Đang mượn -->
                <Border Style="{StaticResource StatCardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Đang mượn" Foreground="{StaticResource TitleOfWindow}" FontSize="16"/>

                            <TextBlock Text="{Binding BorrowedBooks}" FontWeight="Bold" FontSize="24" Margin="0,5,0,0" Foreground="{StaticResource Black}"/>
                        </StackPanel>
                        <Border Grid.Column="1" Width="48" Height="48" Background="{StaticResource InUse_light}" CornerRadius="12"
                                HorizontalAlignment="Right" VerticalAlignment="Center">
                            <fa:IconImage Icon="BookOpen" Foreground="{StaticResource InUse}" Width="24" Height="24" 
                                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- Quá hạn -->
                <Border Style="{StaticResource StatCardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Quá hạn" Foreground="{StaticResource TitleOfWindow}" FontSize="16"/>

                            <TextBlock Text="{Binding OverdueBooks}" FontWeight="Bold" FontSize="24" Margin="0,5,0,0" Foreground="{StaticResource Black}"/>
                        </StackPanel>
                        <Border Grid.Column="1" Width="48" Height="48" Background="{StaticResource Danger/Overdue_light}" CornerRadius="12"
                                HorizontalAlignment="Right" VerticalAlignment="Center">
                            <fa:IconImage Icon="Bell" Foreground="{StaticResource Danger/Overdue}" Width="24" Height="24" 
                                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- Bạn đọc hoạt động -->
                <Border Style="{StaticResource StatCardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Số lượng bạn đọc" Foreground="{StaticResource TitleOfWindow}" FontSize="16"/>

                            <TextBlock Text="{Binding BorrowStudents}" FontWeight="Bold" FontSize="24" Margin="0,5,0,0" Foreground="{StaticResource Black}"/>
                        </StackPanel>
                        <Border Grid.Column="1" Width="48" Height="48" Background="{StaticResource Success/1_light}" CornerRadius="12"
                                HorizontalAlignment="Right" VerticalAlignment="Center">
                            <fa:IconImage Icon="PeopleGroup" Foreground="{StaticResource Success/1}" Width="24" Height="24" 
                                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>

            </UniformGrid>
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <!-- Cột trái -->
                <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,0,20,0">

                    <!-- Hoạt động gần đây -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Style="{StaticResource DashboardCardStyle}" MinHeight="400">
                            <StackPanel>
                                <TextBlock Style="{StaticResource CardHeader}" Text="Hoạt động gần đây"/>
                                <TextBlock Style="{StaticResource CardCaption}" 
                                           Text="{Binding NumberOfRecentActivities, StringFormat={}{0} hoạt động mới nhất}" 
                                           Margin="0,-10,0,20"/>

                                <ItemsControl ItemsSource="{Binding RecentActivitiesList}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="0,0,0,15">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Border Grid.Column="0" Width="40" Height="40" CornerRadius="20" Margin="0,0,15,0" Background="{Binding BackgroundColor}">
                                                    <fa:IconImage Icon="{Binding Icon}" Width="16" Height="16" Foreground="{Binding IconColor}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Description}" FontSize="14" FontWeight="Medium" TextWrapping="Wrap"/>
                                                    <TextBlock Text="{Binding TimeAgo}" FontSize="12" Foreground="{StaticResource TitleOfWindow}" Margin="0,2,0,0"/>
                                                </StackPanel>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="2" Style="{StaticResource DashboardCardStyle}" MinHeight="400">
                            <StackPanel>
                                <TextBlock Style="{StaticResource CardHeader}" Text="Sách quá hạn cần xử lý"/>
                                <TextBlock Style="{StaticResource CardCaption}" Text="Danh sách sách đã quá hạn" Margin="0,-10,0,20"/>

                                <ItemsControl ItemsSource="{Binding OverdueBooksList}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="{StaticResource Danger/Overdue_light}" 
                                BorderBrush="{StaticResource Danger/Overdue}" 
                                BorderThickness="1"
                                CornerRadius="10" Padding="15,10" Margin="0,0,0,10">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Border Grid.Column="0" Width="32" Height="32" CornerRadius="16" Background="#FEE2E2" Margin="0,0,15,0" VerticalAlignment="Top">
                                                        <fa:IconImage Icon="TriangleExclamation" Width="14" Height="14" Foreground="{StaticResource Danger/Overdue}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <StackPanel Grid.Column="1">
                                                        <TextBlock Text="{Binding BookTitle}" FontSize="14" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                                                        <TextBlock Text="{Binding ReaderName}" FontSize="13" Foreground="{StaticResource TitleOfWindow}" Margin="0,2,0,4"/>
                                                        <TextBlock Foreground="{StaticResource Danger/Overdue}" FontSize="13" FontWeight="Medium">
                                        <Run Text="Quá hạn: "/>
                                        <Run Text="{Binding DueDate, StringFormat='{}{0:dd/MM/yyyy}'}"/>
                                                        </TextBlock>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>

                    </Grid>

                    <!-- Xu hướng mượn/trả sách -->
                    <Border Style="{StaticResource DashboardCardStyle}" MinHeight="400">
                        <StackPanel>
                            <TextBlock Style="{StaticResource CardHeader}" Text="Xu hướng mượn/trả sách"/>
                            <TextBlock Style="{StaticResource CardCaption}" Text="Thống kê hoạt động mượn và trả sách 6 tháng gần đây"/>

                            <lvc:CartesianChart
                                Series="{Binding LineChartSeries}"
                                XAxes="{Binding LineChartXAxes}"
                                MinHeight="300"
                                LegendPosition="Bottom">
                            </lvc:CartesianChart>

                        </StackPanel>
                    </Border>

                    <!-- Thống kê mượn sách theo thể loại -->
                    <Border Style="{StaticResource DashboardCardStyle}" MinHeight="400">
                        <StackPanel>
                            <TextBlock Style="{StaticResource CardHeader}" Text="Thống kê mượn sách theo thể loại"/>
                            <TextBlock Style="{StaticResource CardCaption}" Text="Số lượt mượn theo từng thể loại sách"/>

                            <lvc:CartesianChart
                                Series="{Binding BarChartSeries}"
                                XAxes="{Binding BarChartXAxes}"
                                YAxes="{Binding BarChartYAxes}"
                                MinHeight="300"
                                LegendPosition="Hidden">
                            </lvc:CartesianChart>

                        </StackPanel>
                    </Border>

                </StackPanel>

                <!-- Cột phải -->
                <StackPanel Grid.Column="1" Orientation="Vertical">

                    <!-- Phân bổ trạng thái sách -->
                    <Border Style="{StaticResource DashboardCardStyle}" MinHeight="400">
                        <StackPanel>
                            <TextBlock Style="{StaticResource CardHeader}" Text="Phân bổ trạng thái sách"/>
                            <TextBlock Style="{StaticResource CardCaption}" Text="Tỷ lệ trạng thái các bản sao"/>

                            <lvc:PieChart
                                Series="{Binding PieChartSeries}"
                                MinHeight="300"
                                InitialRotation="-90"
                                LegendPosition="Bottom">
                            </lvc:PieChart>

                        </StackPanel>
                    </Border>

                    <!-- Sách được mượn nhiều nhất -->
                    <Border Style="{StaticResource DashboardCardStyle}">
                        <StackPanel>
                            <TextBlock Style="{StaticResource CardHeader}" Text="Sách được mượn nhiều nhất"/>
                            <TextBlock Style="{StaticResource CardCaption}" Text="Top 5 đầu sách phổ biến"/>

                            <ItemsControl ItemsSource="{Binding TopBooksList}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,0,0,15">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <Border Grid.Column="0" 
                                                Width="40" Height="40" 
                                                CornerRadius="20"
                                                Background="#E0F2F9" 
                                                Margin="0,0,15,0">
                                                <fa:IconImage Icon="Book" 
                                                      Width="16" Height="16" 
                                                      Foreground="{StaticResource ChanelBackground}"
                                                      HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center"/>
                                            </Border>

                                            <TextBlock Grid.Column="1" 
                                               Text="{Binding Title}" 
                                               VerticalAlignment="Center"
                                               FontSize="14"
                                               FontWeight="Medium"
                                               TextTrimming="CharacterEllipsis" 
                                               ToolTip="{Binding Title}"/>
                                            <Border Grid.Column="2" 
                                                Background="#E0F2F9"
                                                CornerRadius="12"
                                                Padding="10,4">
                                                <TextBlock VerticalAlignment="Center">
                                                    <Run Text="{Binding LoanCount}" FontWeight="Bold" Foreground="{StaticResource ChanelBackground}"/>
                                                    <Run Text=" lượt" Foreground="{StaticResource ChanelBackground}" FontSize="12"/>
                                                </TextBlock>
                                            </Border>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                        </StackPanel>
                    </Border>

                    <!-- Bạn đọc mới đăng ký -->
                    <Border Style="{StaticResource DashboardCardStyle}" MinHeight="300">
                        <StackPanel>
                            <TextBlock Style="{StaticResource CardHeader}" Text="Bạn đọc mới đăng ký"/>
                            <TextBlock Style="{StaticResource CardCaption}" Text="Xu hướng các tháng gần đây"/>

                            <lvc:CartesianChart
                                Series="{Binding AreaChartSeries}"
                                XAxes="{Binding AreaChartXAxes}"
                                YAxes="{Binding AreaChartYAxes}"
                                MinHeight="200"
                                LegendPosition="Hidden">
                            </lvc:CartesianChart>

                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</UserControl>