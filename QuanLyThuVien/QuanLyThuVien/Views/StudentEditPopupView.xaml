<UserControl x:Class="QuanLyThuVien.Views.StudentEditPopupView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="650">

    <UserControl.Resources>
        <!-- Style cho Label tiêu đề của ô nhập -->
        <Style x:Key="InputLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource Black}"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <!-- Style cho TextBox nhập liệu -->
        <Style x:Key="StandardTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{StaticResource Black}"/>
            <Setter Property="Background" Value="{StaticResource White}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Stroke}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <Border x:Name="Root" CornerRadius="8"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"/>

                            <ScrollViewer x:Name="PART_ContentHost"
                                      Margin="{TemplateBinding Padding}"
                                      VerticalAlignment="Center"/>

                            <TextBlock x:Name="Hint" Text="{TemplateBinding Tag}"
                                   Foreground="{StaticResource TitleOfWindow}" Opacity="0.5"
                                   FontSize="{TemplateBinding FontSize}"
                                   Margin="{TemplateBinding Padding}"
                                   VerticalAlignment="Center" IsHitTestVisible="False"
                                   Visibility="Collapsed"/>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="Text" Value=""/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Hint" Property="Visibility" Value="Visible"/>
                            </MultiTrigger>

                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="Root" Property="BorderBrush" Value="{StaticResource ChanelBackground}"/>
                                <Setter TargetName="Root" Property="BorderThickness" Value="1.5"/>
                            </Trigger>

                            <Trigger Property="IsReadOnly" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="#F3F4F6"/>
                                <Setter TargetName="Root" Property="BorderBrush" Value="Transparent"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <!-- Border Chính -->
    <Border Background="{StaticResource White}" CornerRadius="12" Width="650" Height="550">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.2" Color="Gray"/>
        </Border.Effect>

        <!-- Layout chính: Header - Body - Footer -->
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="Auto"/>
                <!-- Divider -->
                <RowDefinition Height="Auto"/>
                <!-- Input Form -->
                <RowDefinition Height="Auto"/>
                <!-- Divider -->
                <RowDefinition Height="Auto"/>
                <!-- Footer -->
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Title -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Chỉnh sửa thông tin sinh viên" 
                               FontSize="22" FontWeight="Bold" Foreground="{StaticResource Black}"/>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock Text="Cập nhật thông tin cho sinh viên: " 
                                   FontSize="14" Foreground="{StaticResource TitleOfWindow}"/>
                        <TextBlock Text="{Binding StudentId}" 
                                   FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource TitleOfWindow}"/>
                    </StackPanel>
                </StackPanel>

                <!-- X button -->
                <Button Grid.Column="1" Style="{StaticResource CircularIconButton}"
                        VerticalAlignment="Top"
                        Command="{Binding ClosePopupCommand}">
                    <fa:IconImage Icon="Xmark" Width="16" Height="16" Foreground="{StaticResource TitleOfWindow}"/>
                </Button>
            </Grid>

            <!-- Divider -->
            <Border Grid.Row="1" Background="{StaticResource Stroke}" Height="1" Margin="-30,0,-30,20"/>

            <!-- Input Form -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Hàng 1: Mã & Tên -->
                    <RowDefinition Height="Auto"/>
                    <!-- Hàng 2: Note cho Mã -->
                    <RowDefinition Height="20"/>
                    <!-- Spacing -->
                    <RowDefinition Height="Auto"/>
                    <!-- Hàng 3: Khoa & SĐT -->
                    <RowDefinition Height="20"/>
                    <!-- Spacing -->
                    <RowDefinition Height="Auto"/>
                    <!-- Hàng 4: Email -->
                </Grid.RowDefinitions>

                <!-- Mã Sinh Viên -->
                <StackPanel Grid.Row="0" Grid.Column="0">
                    <TextBlock Style="{StaticResource InputLabel}">
                        <Run Text="Mã sinh viên"/>
                        <Run Text="*" Foreground="Red"/>
                    </TextBlock>
                    <TextBox Text="{Binding StudentId, Mode=OneWay}" 
                             Style="{StaticResource StandardTextBox}"
                             Height="45"/>
                </StackPanel>
                <!-- Note nhỏ dưới mã SV -->
                <TextBlock Grid.Row="1" Grid.Column="0" 
                           Text="Mã sinh viên không thể thay đổi" 
                           FontSize="12" Foreground="{StaticResource TitleOfWindow}" Margin="0,4,0,0"/>

                <!-- Họ Tên -->
                <StackPanel Grid.Row="0" Grid.Column="2">
                    <TextBlock Style="{StaticResource InputLabel}">
                        <Run Text="Họ và tên"/> 
                        <Run Text="*" Foreground="Red"/>
                    </TextBlock>
                    <TextBox Text="{Binding StudentName, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource StandardTextBox}"
                             Tag="Vd: Nguyễn Văn A"
                             Height="45"/>
                </StackPanel>

                <!-- Khoa-->
                <StackPanel Grid.Row="3" Grid.Column="0">
                    <TextBlock Style="{StaticResource InputLabel}">
                        <Run Text="Khoa"/> 
                        <Run Text="*" Foreground="Red"/>
                    </TextBlock>
                    <ComboBox Style="{StaticResource RoundedComboBoxStyle}"
                              Height="45"
                              HorizontalAlignment="Stretch"
                              ItemsSource="{Binding FacultyList}"
                              DisplayMemberPath="FacultyName"
                              SelectedValuePath="FacultyID"
                              SelectedValue="{Binding SelectedFacultyId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>

                <!-- Số điện thoại -->
                <StackPanel Grid.Row="3" Grid.Column="2">
                    <TextBlock Text="Số điện thoại" Style="{StaticResource InputLabel}"/>
                    <TextBox Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}" 
                             Tag="VD: 0901234567"
                             Style="{StaticResource StandardTextBox}"
                             Height="45"/>
                </StackPanel>

                <!-- Email -->
                <StackPanel Grid.Row="5" Grid.ColumnSpan="3">
                    <TextBlock Style="{StaticResource InputLabel}">
                        <Run Text="Email"/> 
                        <Run Text="*" Foreground="Red"/>
                    </TextBlock>
                    <!-- Email -->
                    <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource StandardTextBox}"
                             Tag="Vd: nguyenvana720@gmail.com"
                             Height="45"/>
                </StackPanel>

            </Grid>

            <!-- Divider -->
            <Border Grid.Row="3" Background="{StaticResource Stroke}" Height="1" Margin="-30,25,-30,20"/>

            <!-- Footer Button -->
            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0" VerticalAlignment="Center">
                <!-- Cancel button -->
                <Button Content="Hủy" 
                        Command="{Binding ClosePopupCommand}"
                        Style="{StaticResource RoundedButton}"
                        Background="White" 
                        Foreground="{StaticResource Black}" 
                        BorderBrush="{StaticResource Stroke}"
                        Width="100" Height="40" Margin="0,0,15,0"/>

                <!-- Save button -->
                <Button Content="Lưu thay đổi" 
                        Command="{Binding SaveCommand}"
                        Style="{StaticResource RoundedButton}"
                        Width="140" Height="40"/>
            </StackPanel>

        </Grid>
    </Border>
</UserControl>