<UserControl x:Class="QuanLyThuVien.Views.QuanLySachPopup.SuaBookCopyPopupView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             mc:Ignorable="d" 
             d:DesignHeight="350" d:DesignWidth="400">

    <Border Background="{StaticResource White}" CornerRadius="12" Width="400">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.2" Color="Gray"/>
        </Border.Effect>

        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Chỉnh sửa bản sao" FontSize="20" FontWeight="Bold" Foreground="{StaticResource Black}"/>
                    <TextBlock Text="Cập nhật thông tin bản sao vật lý" FontSize="13" Foreground="{StaticResource TitleOfWindow}" Margin="0,4,0,0"/>
                </StackPanel>
                <Button Style="{StaticResource CircularIconButton}" HorizontalAlignment="Right" VerticalAlignment="Top"
                        Command="{Binding ClosePopupCommand}">
                    <fa:IconImage Icon="Xmark" Width="16" Height="16" Foreground="{StaticResource TitleOfWindow}"/>
                </Button>
            </Grid>

            <StackPanel Grid.Row="1">
                <TextBlock Style="{StaticResource InputLabel}">
                    <Run Text="Mã bản sao"/> <Run Text="*" Foreground="Red"/>
                </TextBlock>
                <TextBox Text="{Binding BookCopyID, Mode=OneWay}" 
                         Style="{StaticResource StandardTextBox}" 
                         IsReadOnly="True" Background="#F3F4F6" BorderBrush="Transparent"
                         Height="40" Margin="0,0,0,15"/>

                <TextBlock Style="{StaticResource InputLabel}">
                    <Run Text="Vị trí"/> <Run Text="*" Foreground="Red"/>
                </TextBlock>
                <ComboBox Style="{StaticResource RoundedComboBoxStyle}" Height="40"
                          HorizontalAlignment="Stretch"
                          ItemsSource="{Binding Locations}"
                          DisplayMemberPath="LocName"
                          SelectedItem="{Binding SelectedLocation, Mode=TwoWay}"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,25,0,0">
                <Button Content="Hủy" Command="{Binding ClosePopupCommand}"
                        Style="{StaticResource RoundedButton}"
                        Background="White" Foreground="{StaticResource Black}" BorderBrush="{StaticResource Stroke}"
                        Width="80" Height="36" Margin="0,0,10,0"/>

                <Button Content="Lưu thay đổi" Command="{Binding SaveCommand}"
                        Style="{StaticResource RoundedButton}"
                        Width="140" Height="36"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>


