<UserControl x:Class="QuanLyThuVien.Views.QuanLySachPopup.SuaBookHeadPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:fa ="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyThuVien.Views.QuanLySachPopup"
        mc:Ignorable="d"
        Height="750" Width="500">
    <UserControl.Resources>
        <!-- Rounded textbox -->
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,0,0,0" />
            <Setter Property="Padding" Value="5" />
            <Setter Property="FontSize" Value="15" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="#F6F7FB"
                            CornerRadius="15"
                            BorderBrush="#E0E3EB"
                            BorderThickness="1">
                            <ScrollViewer x:Name="PART_ContentHost"
                                      Margin="4" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Buttons -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="8,0,0,0" />
            <Setter Property="Height" Value="30" />
            <Setter Property="Padding" Value="12" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="#2563EB" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="White" />
            <Setter Property="Foreground" Value="#111827" />
            <Setter Property="BorderBrush" Value="#E0E3EB" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <!-- Gray background, card centered -->
    <Grid
    Margin="10"
    
    >
        <!-- 300x500 * 1.5 = 450x750 -->
        <Border Width="450"
            Background="White" Margin="0,0,0,0">
            <Grid>
                <!-- Row heights already scaled 1.5x -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="105" />
                    <RowDefinition Height="75" />
                    <RowDefinition Height="75" />
                    <RowDefinition Height="75" />
                    <RowDefinition Height="75" />
                    <RowDefinition Height="240" />
                    <RowDefinition Height="45" />
                </Grid.RowDefinitions>

                <!-- Row 0 – title + subtitle -->
                
                <StackPanel Grid.Row="0" >
                    <!-- 18 * 1.5 = 27 -->
                    <StackPanel Orientation="Vertical">
                        <StackPanel Orientation="Horizontal" >
                            <TextBlock Text="Chỉnh sửa đầu sách"
                               FontSize="27"
                               FontWeight="Bold"
                               Foreground="#111827" 
                               Margin="0,0,175,0"        />
                            <Button Style="{StaticResource CircularIconButton}"
                            HorizontalAlignment="Left" 
                                VerticalAlignment="Center" 
                                Margin="0,0,15,0"
                                Width="25" Height="25"
                                Command="{Binding ClosePopupCommand}">
                                                <fa:IconImage Icon="Xmark" 
                                Width="12" 
                                Height="12" 
                                Foreground="{StaticResource TitleOfWindow}"/>
                            </Button>
                        </StackPanel>
                        
                        <!-- 11 * 1.5 = 16.5 ≈ 17 -->
                        <!-- 6 * 1.5 = 9 -->
                    
                        <TextBlock Text="Cập nhật thông tin đầu sách"
                               TextWrapping="Wrap"
                               Margin="0,9,0,0"
                               FontSize="17"
                               Foreground="#6B7280" />
                        
                    </StackPanel>
                    <TextBlock Text="Lập trình Python nâng cao"
                           TextWrapping="Wrap"
                           Margin="2,6,0,0"
                           FontSize="17"
                           FontWeight="SemiBold"
                           Foreground="#111827" />
                </StackPanel>

                <!-- Row 1 – Tên sách -->
                <!-- 4 * 1.5 = 6 -->
                <StackPanel Grid.Row="1" Margin="0,6,0,0">
                    <!-- 11 * 1.5 = 16.5 ≈ 17 -->
                    <TextBlock Text="Tên sách *"
                           FontSize="17"
                           FontWeight="SemiBold"
                           Foreground="#111827" />
                    <TextBox Text="{Binding TenSach}" />
                </StackPanel>

                <!-- Row 2 – Tác giả / ISBN -->
                <Grid Grid.Row="2" Margin="0,6,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <!-- 10 * 1.5 = 15 -->
                        <ColumnDefinition Width="15" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Tác giả *"
                               FontSize="17"
                               FontWeight="SemiBold"
                               Foreground="#111827" />
                        <TextBox Text="{Binding TacGia}" />
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="ISBN *"
                               FontSize="17"
                               FontWeight="SemiBold"
                               Foreground="#111827" />
                        <TextBox Text="{Binding ISBN}" />
                    </StackPanel>
                </Grid>

                <!-- Row 3 – Thể loại / Năm xuất bản -->
                <Grid Grid.Row="3" Margin="0,6,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="15" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Thể loại"
                   FontSize="17"
                   FontWeight="SemiBold"
                   Foreground="#111827" />
                        <ComboBox Style="{StaticResource RoundedComboBoxStyle}"
                  Height="45"
                  HorizontalAlignment="Stretch"
                  ItemsSource="{Binding LoaiSachs}"
                  DisplayMemberPath="GenreName"
                  SelectedItem="{Binding LoaiSachSelected, Mode=TwoWay}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Loại sách" 
                   FontSize="17"
                   FontWeight="SemiBold"
                   Foreground="#111827" />
                        <ComboBox Style="{StaticResource RoundedComboBoxStyle}"
                  Height="45"
                  HorizontalAlignment="Stretch"
                  ItemsSource="{Binding TheLoais}"
                  DisplayMemberPath="CategoryName"
                  SelectedItem="{Binding TheLoaiSelected, Mode=TwoWay}"/>
                    </StackPanel>
                </Grid>


                <!-- Row 5 – Mô tả -->
                <Grid Grid.Row="4" Margin="0,6,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="15" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" >
                        <TextBlock Text="Năm xuất bản"
                   FontSize="17"
                   FontWeight="SemiBold"
                   Foreground="#111827" />
                        <TextBox Text="{Binding NamXB}" />
                    </StackPanel>
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Nhà xuất bản"
                   FontSize="17"
                   FontWeight="SemiBold"
                   Foreground="#111827" />
                        <TextBox Text="{Binding NXB}" />
                    </StackPanel>

                </Grid>
                <StackPanel Grid.Row="5" Margin="0,6,0,0">
                    <TextBlock Text="Mô tả"
                           FontSize="17"
                           FontWeight="SemiBold"
                           Foreground="#111827" />
                    <!-- 120 * 1.5 = 180 -->
                    <TextBox 
                         AcceptsReturn="True"
                         Height="180"
                         VerticalScrollBarVisibility="Auto"
                        Text="{Binding MoTa}"
        />
                </StackPanel>
                <!-- Row 6 – Buttons -->
                <StackPanel Grid.Row="6"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center">
                    <!-- 40 * 1.5 = 60 -->
                    <Button Style="{StaticResource SecondaryButtonStyle}"
                        Width="60"
                        Content="Hủy" 
                        Command="{Binding ClosePopupCommand}"
                            />
                    <!-- 100 * 1.5 = 150 -->
                    <Button Style="{StaticResource PrimaryButtonStyle}"
                        Width="150"
                        Content="Lưu thay đổi" 
                        Command="{Binding SaveChangesCommand}"
                            />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
