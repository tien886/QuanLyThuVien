<UserControl x:Class="QuanLyThuVien.Views.StudentAddPopupView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="650">

    <UserControl.Resources>
        <Style x:Key="InputLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource Black}"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>
    </UserControl.Resources>

    <Border Background="{StaticResource White}" CornerRadius="12" Width="650">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.2" Color="Gray"/>
        </Border.Effect>

        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Thêm sinh viên mới" 
                               FontSize="22" FontWeight="Bold" Foreground="{StaticResource Black}"/>
                    <TextBlock Text="Nhập thông tin để tạo tài khoản mới" 
                               FontSize="14" Foreground="{StaticResource TitleOfWindow}" Margin="0,5,0,0"/>
                </StackPanel>

                <Button Grid.Column="1" Style="{StaticResource CircularIconButton}"
                        VerticalAlignment="Top"
                        Command="{Binding ClosePopupCommand}">
                    <fa:IconImage Icon="Xmark" Width="16" Height="16" Foreground="{StaticResource TitleOfWindow}"/>
                </Button>
            </Grid>

            <Border Grid.Row="1" Background="{StaticResource Stroke}" Height="1" Margin="-30,0,-30,20"/>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Grid.Column="0">
                    <TextBlock Style="{StaticResource InputLabel}">
                        <Run Text="Họ và tên"/> <Run Text="*" Foreground="Red"/>
                    </TextBlock>
                    <TextBox Text="{Binding StudentName, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource StandardTextBox}"
                             Tag="VD: Nguyễn Văn A"
                             Height="45"/>
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="2">
                    <TextBlock Text="Số điện thoại" Style="{StaticResource InputLabel}"/>
                    <TextBox Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}" 
                             Tag="VD: 0901234567"
                             Style="{StaticResource StandardTextBox}"
                             Height="45"/>
                </StackPanel>

                <StackPanel Grid.Row="2" Grid.ColumnSpan="3">
                    <TextBlock Style="{StaticResource InputLabel}">
                        <Run Text="Khoa"/> <Run Text="*" Foreground="Red"/>
                    </TextBlock>
                    <ComboBox Style="{StaticResource RoundedComboBoxStyle}"
                              Height="45"
                              HorizontalAlignment="Stretch"
                              ItemsSource="{Binding FacultyList}"
                              DisplayMemberPath="FacultyName"
                              SelectedValuePath="FacultyID"
                              SelectedValue="{Binding SelectedFacultyId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>

                <StackPanel Grid.Row="4" Grid.ColumnSpan="3">
                    <TextBlock Style="{StaticResource InputLabel}">
                        <Run Text="Email"/> <Run Text="*" Foreground="Red"/>
                    </TextBlock>
                    <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" 
                             Tag="VD: email@example.com"
                             Style="{StaticResource StandardTextBox}"
                             Height="45"/>
                </StackPanel>

            </Grid>

            <Border Grid.Row="3" Background="{StaticResource Stroke}" Height="1" Margin="-30,25,-30,20"/>

            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Hủy" 
                        Command="{Binding ClosePopupCommand}"
                        Style="{StaticResource RoundedButton}"
                        Background="White" 
                        Foreground="{StaticResource Black}" 
                        BorderBrush="{StaticResource Stroke}"
                        Width="100" Height="40" Margin="0,0,15,0"/>

                <Button Content="Thêm mới" 
                        Command="{Binding SaveCommand}"
                        Style="{StaticResource RoundedButton}"
                        Width="140" Height="40"/>
            </StackPanel>

        </Grid>
    </Border>
</UserControl>