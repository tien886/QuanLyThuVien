<UserControl x:Class="QuanLyThuVien.Views.StudentDetailPopupView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyThuVien.Views"
             xmlns:converters="clr-namespace:QuanLyThuVien.Resources.Converters"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="600">

    <UserControl.Resources>
        <Style x:Key="CircularIconButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{x:Null}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="28"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="root" Background="{TemplateBinding Background}"
                                CornerRadius="14">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="root" Property="Background" Value="{StaticResource InUse_light}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="root" Property="Background" Value="{StaticResource Stroke}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="StatusPillBorder" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Background" Value="{StaticResource Danger/Overdue_light}"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding AccountStatus}" Value="Active">
                    <Setter Property="Background" Value="{StaticResource Success/1_light}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="StatusPillText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="{StaticResource Danger/Overdue}"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding AccountStatus}" Value="Active">
                    <Setter Property="Foreground" Value="{StaticResource Success/1}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        
        <Grid Height="50" VerticalAlignment="Top">
            <TextBlock Text="Thông tin sinh viên" FontSize="18" FontWeight="SemiBold"
                       HorizontalAlignment="Left" VerticalAlignment="Center" Margin="25,0,0,0"/>

            <Button Style="{StaticResource CircularIconButton}"
                    HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,15,0"
                    Width="32" Height="32"
                    Command="{Binding Path=DataContext.CurrentChildView.ClosePopupCommand, 
                          RelativeSource={RelativeSource AncestorType={x:Type local:MainView}}}">

                <fa:IconImage Icon="Xmark" Width="18" Height="18" Foreground="{StaticResource TitleOfWindow}"/>
            </Button>

        </Grid>

        <Border BorderBrush="{StaticResource Stroke}" BorderThickness="0,1,0,0" Margin="0,50,0,0"/>

        <StackPanel Orientation="Vertical" Margin="25,70,25,25">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,15,0">
                    <TextBlock Text="Mã sinh viên" FontSize="15" FontWeight="SemiBold" Foreground="{StaticResource TitleOfWindow}"/>
                    <TextBlock Text="{Binding StudentId}" FontSize="14"  Margin="0,4,0,15"/>

                    <TextBlock Text="Họ và tên" FontSize="15" FontWeight="SemiBold" Foreground="{StaticResource TitleOfWindow}"/>
                    <TextBlock Text="{Binding StudentName}" FontSize="14" Margin="0,4,0,15"/>

                    <TextBlock Text="Email" FontSize="15" FontWeight="SemiBold" Foreground="{StaticResource TitleOfWindow}"/>
                    <TextBlock Text="{Binding Email}" FontSize="14" Margin="0,4,0,15"/>

                    <TextBlock Text="Số điện thoại" FontSize="15" FontWeight="SemiBold" Foreground="{StaticResource TitleOfWindow}"/>
                    <TextBlock Text="{Binding PhoneNumber}" FontSize="14" Margin="0,4,0,15"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="15,0,0,0">
                    <TextBlock Text="Khoa" FontSize="15" FontWeight="SemiBold" Foreground="{StaticResource TitleOfWindow}"/>
                    <TextBlock Text="{Binding Department}" FontSize="14" Margin="0,4,0,15"/>

                    <TextBlock Text="Ngày tạo" FontSize="15" FontWeight="SemiBold" Foreground="{StaticResource TitleOfWindow}"/>
                    <TextBlock Text="{Binding RegistrationDate, StringFormat='dd/MM/yyyy'}" FontSize="14" Margin="0,4,0,15"/>

                    <TextBlock Text="Trạng thái" FontSize="15" FontWeight="SemiBold" Foreground="{StaticResource TitleOfWindow}" Margin="0,0,0,4"/>

                    <Border Style="{StaticResource StatusPillBorder}" HorizontalAlignment="Left">
                        <TextBlock Style="{StaticResource StatusPillText}"
                                   Text="{Binding AccountStatus, Converter={StaticResource StatusToTextConverter}}"/>
                    </Border>
                </StackPanel>
            </Grid>

            <Border BorderBrush="{StaticResource Stroke}" BorderThickness="0,1,0,0" Margin="0,15,0,20"/>

            <TextBlock Text="Thống kê mượn sách" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,20"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                    <TextBlock Text="Tổng đã mượn" FontSize="14" Foreground="{StaticResource TitleOfWindow}"/>
                    <TextBlock Text="{Binding TongDaMuon}" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                </StackPanel>
                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <TextBlock Text="Đang mượn" FontSize="14" Foreground="{StaticResource TitleOfWindow}"/>
                    <TextBlock Text="{Binding DangMuon}" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                </StackPanel>
                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                    <TextBlock Text="Quá hạn" FontSize="14" Foreground="{StaticResource TitleOfWindow}"/>
                    <TextBlock Text="{Binding QuaHan}" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </StackPanel>

        <Border BorderBrush="{StaticResource Stroke}" BorderThickness="0,1,0,0" VerticalAlignment="Bottom" Height="80">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>


                <Button Grid.Column="0" FontWeight="Medium" FontSize="13" Content="Vô hiệu hóa tài khoản" 
                        Style="{StaticResource RoundedButton}"
                        Background="White"
                        Foreground="{StaticResource Danger/Overdue}"
                        BorderBrush="{StaticResource Danger/Overdue}"
                        HorizontalAlignment="Left" VerticalAlignment="Center" Margin="25,0,0,0" Width="240"
                        Command="{Binding Path=DataContext.CurrentChildView.ToggleStatusCommand, 
                                    RelativeSource={RelativeSource AncestorType={x:Type local:MainView}}}"
                        CommandParameter="{Binding}">

                </Button>

                <Button Grid.Column="1" Content="Đóng" 
                        Style="{StaticResource RoundedButton}"
                        Background="{StaticResource White}"
                        Foreground="{StaticResource Black}"
                        BorderBrush="{StaticResource Stroke}"
                        HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,25,0" Width="100"
                        Command="{Binding Path=DataContext.CurrentChildView.ClosePopupCommand, 
                                    RelativeSource={RelativeSource AncestorType={x:Type local:MainView}}}">
                </Button>
            </Grid>
        </Border>
    </Grid>

</UserControl>