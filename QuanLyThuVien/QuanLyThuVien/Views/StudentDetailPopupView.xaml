<UserControl x:Class="QuanLyThuVien.Views.StudentDetailPopupView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyThuVien.Views"
             xmlns:converters="clr-namespace:QuanLyThuVien.Resources.Converters"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="600">

    <Grid>
        
        <!-- Popup title and Close button -->
        <Grid Margin="0,15" 
            VerticalAlignment="Top">
            <!-- Popup title -->
            <StackPanel Margin="25,0,0,0"
                Orientation="Vertical">
                <TextBlock Text="Thông tin sinh viên" 
                       FontSize="15" 
                       FontWeight="Medium"
                       HorizontalAlignment="Left" 
                       VerticalAlignment="Center"/>
                <TextBlock Text="Chi tiết thông tin tài khoản sinh viên"
                           HorizontalAlignment="Left"/>
            </StackPanel>
            

            <!-- Close button -->
            <Button Style="{StaticResource CircularIconButton}"
                HorizontalAlignment="Right" 
                    VerticalAlignment="Center" 
                    Margin="0,0,15,0"
                    Width="25" Height="25"
                    Command="{Binding ClosePopupCommand}">
                <fa:IconImage Icon="Xmark" 
                              Width="12" 
                              Height="12" 
                              Foreground="{StaticResource TitleOfWindow}"/>
            </Button>
        </Grid>

        <!-- Popup content -->
        <StackPanel Height="450"
                    Orientation="Vertical" 
                    Margin="25,70,25,25">
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left column -->
                <StackPanel Grid.Column="0" Margin="0,0,15,0">
                    <!-- Mã sinh viên -->
                    <TextBlock Text="Mã sinh viên" 
                               FontSize="14" 
                               FontWeight="Medium" 
                               Foreground="{StaticResource TitleOfWindow}"/>
                    <TextBlock Text="{Binding StudentId}" 
                               FontSize="14"  
                               Margin="0,4,0,15"/>
                    <!-- Họ tên -->
                    <TextBlock Text="Họ và tên" 
                               FontSize="14" 
                               FontWeight="Medium" 
                               Foreground="{StaticResource TitleOfWindow}"/>
                    <TextBlock Text="{Binding StudentName}" 
                               FontSize="14" Margin="0,4,0,15"/>

                    <!-- Email -->
                    <TextBlock Text="Email" 
                               FontSize="14" 
                               FontWeight="Medium" 
                               Foreground="{StaticResource TitleOfWindow}"/>
                    <TextBlock Text="{Binding Email}" 
                               FontSize="14" 
                               Margin="0,4,0,15"/>

                    <!-- Số điện thoại -->
                    <TextBlock Text="Số điện thoại" 
                               FontSize="14" 
                               FontWeight="Medium" 
                               Foreground="{StaticResource TitleOfWindow}"/>
                    <TextBlock Text="{Binding PhoneNumber}" 
                               FontSize="14" Margin="0,4,0,15"/>
                </StackPanel>

                <!-- Right column -->
                <StackPanel Grid.Column="1" Margin="15,0,0,0">
                    <!-- Khoa -->
                    <TextBlock Text="Khoa" 
                               FontSize="14" 
                               FontWeight="Medium" 
                               Foreground="{StaticResource TitleOfWindow}"/>
                    <TextBlock Text="{Binding FacultyName}" 
                               FontSize="14" Margin="0,4,0,15"/>
                    
                    <!-- Ngày tạo -->
                    <TextBlock Text="Ngày tạo" 
                               FontSize="14" 
                               FontWeight="Medium" 
                               Foreground="{StaticResource TitleOfWindow}"/>
                    <TextBlock Text="{Binding RegistrationDate, StringFormat='dd/MM/yyyy'}" 
                               FontSize="14" 
                               Margin="0,4,0,15"/>

                    <!-- Trạng thái -->
                    <TextBlock Text="Trạng thái" 
                               FontSize="14" 
                               FontWeight="Medium" 
                               Foreground="{StaticResource TitleOfWindow}" 
                               Margin="0,0,0,4"/>
                    <Border Style="{StaticResource StatusPillBorder}" 
                            HorizontalAlignment="Left">
                        <TextBlock Style="{StaticResource StatusPillText}"
                                   Text="{Binding AccountStatus, 
                                            Converter={StaticResource StatusToTextConverter}}"/>
                    </Border>
                </StackPanel>
            </Grid>
            
            <!-- Thanh ngang phân cách -->
            <Border BorderBrush="{StaticResource Stroke}" 
                    BorderThickness="0,1,0,0" 
                    Margin="0,15,0,20"/>

            <!-- Thống kê mượn sách -->
            <TextBlock Text="Thống kê mượn sách" FontSize="15" FontWeight="Medium" Margin="0,0,0,20"/>



            <UniformGrid Columns="3" Rows="1">
                <Border Margin="0,0,0,10" 
                            Padding="10" CornerRadius="8" 
                            Background="{StaticResource DeepBackgroundSolid}">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="Tổng đã mượn" 
                                       FontWeight="Normal"
                                       Foreground="{StaticResource TitleOfWindow}" 
                                       FontSize="15" />
                        <TextBlock Text="{Binding TongDaMuon}" 
                                       FontSize="15" 
                                       FontWeight="Normal" 
                                       Foreground="{StaticResource Black}" 
                                       HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <Border Margin="5,0,0,10" 
                            Padding="15"
                            CornerRadius="8"
                            Background="{StaticResource InUse_light}">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="Đang mượn" 
                                       FontWeight="Normal"
                                       Foreground="{StaticResource InUse}" 
                                       FontSize="15" />
                        <TextBlock Text="{Binding DangMuon}" 
                                       FontSize="15" 
                                       FontWeight="Normal" 
                                       Foreground="{StaticResource InUse}" 
                                       HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <Border Margin="5,0,0,10" 
                            Padding="15" 
                            CornerRadius="8" 
                            Background="{StaticResource Danger/Overdue_light}">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="Quá hạn" 
                                       FontWeight="Normal"
                                       Foreground="{StaticResource Danger/Overdue}" 
                                       FontSize="15" />
                        <TextBlock Text="{Binding QuaHan}" 
                                       FontSize="15" 
                                       FontWeight="Normal" 
                                       Foreground="{StaticResource Danger/Overdue}" 
                                       HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </UniformGrid>
            
            <!-- Thanh ngang phân cách -->
            <Border BorderBrush="{StaticResource Stroke}" 
                    BorderThickness="0,1,0,0"
                    Margin="0,15,0,20"
                    VerticalAlignment="Bottom"/>
            <!-- Disable and Close button -->
            <Button Grid.Column="1" 
                Content="Đóng"
                Style="{StaticResource RoundedButton}"
                Background="{StaticResource White}"
                Foreground="{StaticResource Black}"
                BorderBrush="{StaticResource Stroke}"
                HorizontalAlignment="Right" 
                Margin="0,0,0,25"
                Width="80"
                Height="30"
                Command="{Binding ClosePopupCommand}">
            </Button>
        </StackPanel>

        
        
        
    </Grid>

</UserControl>