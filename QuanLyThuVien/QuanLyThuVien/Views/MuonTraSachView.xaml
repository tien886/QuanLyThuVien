<UserControl x:Class="QuanLyThuVien.Views.MuonTraSachView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyThuVien.Views"
             mc:Ignorable="d" 
             Padding="0,32"
             d:DesignHeight="1080" d:DesignWidth="1660">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <StackPanel Orientation="Horizontal">
                <Border
                  Background="White"
                  CornerRadius="15"
                  Padding="20"
                  Width="355"
                  Height="130"
                  Margin="0,10,24,10"
                  SnapsToDevicePixels="True">
                    <Border.Effect>
                        <DropShadowEffect Color="Gray" BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!-- Left: text -->
                        <StackPanel>
                            <TextBlock Text="Đang được mượn" Foreground="{StaticResource TitleOfWindow}" FontSize="20"/>
                            <TextBlock Text="700" FontWeight="Bold" FontSize="18" Foreground="{StaticResource Black}"/>
                        </StackPanel>

                        <!-- Right: icon container -->
                        <Border
                      Grid.Column="1"
                      Width="40" Height="40"
                      Background="#EEF3FF"
                      CornerRadius="12"
                      HorizontalAlignment="Right"
                      VerticalAlignment="Center">
                            <fa:IconImage Icon="Book" Foreground="#2563EB" Width="20" Height="20" 
                        HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>
                <Border
                      Background="White"
                      CornerRadius="15"
                      Padding="20"
                      Width="355"
                      Height="130"
                      Margin="0,10,24,10"
                      SnapsToDevicePixels="True">
                    <Border.Effect>
                        <DropShadowEffect Color="Gray" BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!-- Left: text -->
                        <StackPanel>
                            <TextBlock Text="Quá hạn" Foreground="{StaticResource TitleOfWindow}" FontSize="20"/>
                            <TextBlock Text="6" FontWeight="Bold" FontSize="18" Foreground="{StaticResource Black}"/>
                        </StackPanel>

                        <!-- Right: icon container -->
                        <Border
                      Grid.Column="1"
                      Width="40" Height="40"
                      Background="{StaticResource Danger/Overdue_light}"
                      CornerRadius="12"
                      HorizontalAlignment="Right"
                      VerticalAlignment="Center">
                            <fa:IconImage Icon="BookDead"    Foreground="{StaticResource Danger/Overdue}" Width="20" Height="20" 
                        HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>
                <Border
                      Background="White"
                      CornerRadius="15"
                      Padding="20"
                      Width="355"
                      Height="130"
                      Margin="0,10,34,10"
                      SnapsToDevicePixels="True">
                    <Border.Effect>
                        <DropShadowEffect Color="Gray" BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!-- Left: text -->
                        <StackPanel>
                            <TextBlock Text="Đã trả (tháng này)" Foreground="{StaticResource TitleOfWindow}" FontSize="20"/>
                            <TextBlock Text="100" FontWeight="Bold" FontSize="18" Foreground="{StaticResource Black}"/>
                        </StackPanel>

                        <!-- Right: icon container -->
                        <Border
                      Grid.Column="1"
                      Width="40" Height="40"
                      Background="{StaticResource Success/Available_light}"
                      CornerRadius="12"
                      HorizontalAlignment="Right"
                      VerticalAlignment="Center">
                            <fa:IconImage Icon="ArrowRightToFile" Foreground="{StaticResource Success/Available}" Width="20" Height="20" 
                        HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>
            </StackPanel>
        </Grid>
        <DataGrid 
            Grid.Row="1"
           ItemsSource="{Binding BorrowSlips}"
          AutoGenerateColumns="False"
          CanUserAddRows="False"
          IsReadOnly="True"
          Style="{StaticResource RoundedDataGrid}"
          Margin="0,8,0,0">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã phiếu"   Binding="{Binding MaPhieu}"   Width="110"/>
                <DataGridTextColumn Header="Sinh viên"  Binding="{Binding SinhVien}"  Width="160"/>
                <DataGridTextColumn Header="Sách"       Binding="{Binding TenSach}"   Width="*"/>
                <DataGridTextColumn Header="Mã bản sao" Binding="{Binding MaBanSao}"  Width="110"/>
                <DataGridTextColumn Header="Ngày mượn"
                             Binding="{Binding NgayMuon, StringFormat=\{0:dd/MM/yyyy\}}"
                             Width="140"/>
                <DataGridTextColumn Header="Hạn trả"    Binding="{Binding HanTra}"    Width="80"/>

                <!-- Trạng thái: pill màu -->
                <DataGridTemplateColumn Header="Trạng thái" Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border x:Name="Badge" CornerRadius="12" Padding="10,4"
                            Background="{StaticResource InUse_light}"
                            HorizontalAlignment="Center">
                                <TextBlock x:Name="BadgeText"
                                   Text="{Binding TrangThai}"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource InUse}"/>
                            </Border>
                            <DataTemplate.Triggers>
                                <!-- Quá hạn -->
                                <DataTrigger Binding="{Binding TrangThai}" Value="Quá hạn">
                                    <Setter TargetName="Badge" Property="Background" Value="{StaticResource Danger/Overdue_light}"/>
                                    <Setter TargetName="BadgeText" Property="Foreground" Value="{StaticResource Danger/Overdue}"/>
                                </DataTrigger>
                                <!-- Đang mượn -->
                                <DataTrigger Binding="{Binding TrangThai}" Value="Đang mượn">
                                    <Setter TargetName="Badge" Property="Background" Value="{StaticResource InUse_light}"/>
                                    <Setter TargetName="BadgeText" Property="Foreground" Value="{StaticResource InUse}"/>
                                </DataTrigger>
                                <!-- Có thể thêm “Chờ duyệt” … -->
                                <DataTrigger Binding="{Binding TrangThai}" Value="Chờ duyệt">
                                    <Setter TargetName="Badge" Property="Background" Value="{StaticResource Warning/Waiting_light}"/>
                                    <Setter TargetName="BadgeText" Property="Foreground" Value="{StaticResource Warning/Waiting}"/>
                                </DataTrigger>
                            </DataTemplate.Triggers>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Thao tác: nút pill “Nhận trả” -->
                <DataGridTemplateColumn Header="Thao tác" Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Nhận trả"
                            Style="{StaticResource RoundedButton}"
                            Command="{Binding DataContext.CheckinCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                            CommandParameter="{Binding}"
                            HorizontalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</UserControl>
