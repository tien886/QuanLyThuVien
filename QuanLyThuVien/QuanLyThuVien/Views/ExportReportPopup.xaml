<UserControl x:Class="QuanLyThuVien.Views.ExportReportPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             Width="400" Height="Auto">

    <Border Background="{StaticResource White}" CornerRadius="12" Padding="25">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.2" Color="Gray"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0">
                <TextBlock Text="Xuất báo cáo" FontSize="20" FontWeight="Bold" Foreground="{StaticResource Black}"/>
                <TextBlock Text="Vui lòng chọn định dạng tệp tin bạn muốn tải về" 
                           FontSize="13" Foreground="{StaticResource TitleOfWindow}" Margin="0,5,0,0"/>
            </StackPanel>

            <StackPanel Grid.Row="2" >

                <Button Style="{StaticResource ProRoundedButton}" Height="50"
                        Command="{Binding ExportToExcelCommand}"
                        Background="#1D6F42" BorderBrush="#1D6F42"
                        Margin="5">
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage Icon="FileExcel" Style="{StaticResource ProRoundedButtonIcon}" Width="20" Height="20"/>
                        <TextBlock Text="Xuất ra Microsoft Excel (.xlsx)" Style="{StaticResource ProRoundedButtonText}" FontSize="15"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource ProRoundedButton}" Height="50"
                        Command="{Binding ExportToCsvCommand}"
                        Background="#2563EB" BorderBrush="#2563EB"
                        Margin="5">
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage Icon="FileCsv" Style="{StaticResource ProRoundedButtonIcon}" Width="20" Height="20"/>
                        <TextBlock Text="Xuất ra CSV (.csv)" Style="{StaticResource ProRoundedButtonText}" FontSize="15"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <Button Grid.Row="4" Content="Hủy bỏ" 
                    Command="{Binding ClosePopupCommand}"
                    Style="{StaticResource RoundedButton}"
                    Background="Transparent" BorderThickness="0" Foreground="{StaticResource TitleOfWindow}"
                    HorizontalAlignment="Center"/>
        </Grid>
    </Border>
</UserControl>