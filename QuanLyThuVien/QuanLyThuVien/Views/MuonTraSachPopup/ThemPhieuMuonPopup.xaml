<UserControl x:Class="QuanLyThuVien.Views.MuonTraSachPopup.ThemPhieuMuonPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyThuVien.Views.MuonTraSachPopup"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="700">

    <Border Background="{StaticResource White}" CornerRadius="12" Width="700" Height="Auto">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.2" Color="Gray"/>
        </Border.Effect>

        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Tạo phiếu mượn sách" 
                               FontSize="22" FontWeight="Bold" Foreground="{StaticResource Black}"/>
                    <TextBlock Text="Nhập mã sinh viên và mã bản sao để tạo phiếu" 
                               FontSize="14" Foreground="{StaticResource TitleOfWindow}" Margin="0,5,0,0"/>
                </StackPanel>

                <Button Grid.Column="1" Style="{StaticResource CircularIconButton}" 
                        VerticalAlignment="Top"
                        Command="{Binding ClosePopupCommand}">
                    <fa:IconImage Icon="Xmark" Width="16" Height="16" Foreground="{StaticResource TitleOfWindow}"/>
                </Button>
            </Grid>

            <Border Grid.Row="1" Background="{StaticResource Stroke}" Height="1" Margin="-30,0,-30,25"/>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Grid.Column="0">
                    <TextBlock Style="{StaticResource InputLabel}">
                        <Run Text="Mã sinh viên"/> <Run Text="*" Foreground="Red"/>
                    </TextBlock>
                    <TextBox Text="{Binding StudentId, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource StandardTextBox}"
                             Tag="Nhập ID (VD: 1, 2...)"/>
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="2">
                    <TextBlock Text="Tên sinh viên" Style="{StaticResource InputLabel}"/>
                    <TextBox Text="{Binding StudentName, Mode=OneWay}" 
                             Style="{StaticResource StandardTextBox}" 
                             IsReadOnly="True" Background="#F3F4F6" BorderBrush="Transparent"/>
                </StackPanel>

                <StackPanel Grid.Row="2" Grid.Column="0">
                    <TextBlock Style="{StaticResource InputLabel}">
                        <Run Text="Mã bản sao"/> <Run Text="*" Foreground="Red"/>
                    </TextBlock>
                    <TextBox Text="{Binding BookCopyID, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource StandardTextBox}"
                             Tag="Nhập mã (VD: CP00001)"/>
                </StackPanel>

                <StackPanel Grid.Row="2" Grid.Column="2">
                    <TextBlock Text="Tên sách" Style="{StaticResource InputLabel}"/>
                    <TextBox Text="{Binding BookTitle, Mode=OneWay}" 
                             Style="{StaticResource StandardTextBox}" 
                             IsReadOnly="True" Background="#F3F4F6" BorderBrush="Transparent"/>
                </StackPanel>

                <StackPanel Grid.Row="4" Grid.Column="0">
                    <TextBlock Text="Thể loại" Style="{StaticResource InputLabel}"/>
                    <TextBox Text="{Binding GenreName, Mode=OneWay}" 
                             Style="{StaticResource StandardTextBox}" 
                             IsReadOnly="True" Background="#F3F4F6" BorderBrush="Transparent"/>
                </StackPanel>

                <StackPanel Grid.Row="4" Grid.Column="2">
                    <TextBlock Text="Loại sách" Style="{StaticResource InputLabel}"/>
                    <TextBox Text="{Binding CategoryName, Mode=OneWay}" 
                             Style="{StaticResource StandardTextBox}" 
                             IsReadOnly="True" Background="#F3F4F6" BorderBrush="Transparent"/>
                </StackPanel>

                <StackPanel Grid.Row="6" Grid.Column="0">
                    <TextBlock Style="{StaticResource InputLabel}">
                        <Run Text="Ngày mượn"/> <Run Text="*" Foreground="Red"/>
                    </TextBlock>
                    <DatePicker SelectedDate="{Binding LoanDate}"
                                Style="{StaticResource CleanRoundedDatePicker}"
                                Height="45"
                                VerticalContentAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Row="6" Grid.Column="2">
                    <TextBlock Style="{StaticResource InputLabel}">
                        <Run Text="Hạn trả"/> <Run Text="*" Foreground="Red"/>
                    </TextBlock>
                    <DatePicker SelectedDate="{Binding DueDate}"
                                Style="{StaticResource CleanRoundedDatePicker}"
                                Height="45"
                                VerticalContentAlignment="Center"/>
                </StackPanel>

            </Grid>

            <Border Grid.Row="3" Background="{StaticResource Stroke}" Height="1" Margin="-30,25,-30,20"/>

            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Hủy" 
                        Command="{Binding ClosePopupCommand}"
                        Style="{StaticResource RoundedButton}"
                        Background="White" Foreground="{StaticResource Black}" BorderBrush="{StaticResource Stroke}"
                        Width="100" Height="40" Margin="0,0,15,0"/>

                <Button Content="Tạo phiếu mượn" 
                        Command="{Binding CreateLoanCommand}"
                        Style="{StaticResource RoundedButton}"
                        Width="150" Height="40"/>
            </StackPanel>

        </Grid>
    </Border>
</UserControl>